<h1>Edit</h1>

<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@task.errors.count, "помилка", "помилки") %> завадили збереженню цього завдання:</h2>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, 'Title' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Description' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :due_date, 'Due date' %>
    <%= form.date_field :due_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :priority, 'Priority' %>
    <%= form.number_field :priority, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :status, 'Status' %>
    <%= form.select :status, ['ToDo', 'InProgress', 'Done'], selected: @task.status, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', tasks_path, class: 'btn btn-link' %>
